<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- URL scheme used by the app for Phantom callbacks. Make sure this matches the scheme used in your code (e.g. "aasdf"). -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>CFBundleURLName</key>
			<string>com.aasdf.app</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>aasdf</string>
			</array>
		</dict>
	</array>

	<!-- Allow the app to query whether Phantom is installed -->
	<key>LSApplicationQueriesSchemes</key>
	<array>
		<string>phantom</string>
	</array>

	<!-- LOCAL NETWORK ACCESS - Required for iOS 14+ -->
	<key>NSLocalNetworkUsageDescription</key>
	<string>AASDF needs to connect to your local development server for authentication.</string>
	
	<!-- Bonjour services (required for local network) -->
	<key>NSBonjourServices</key>
	<array>
		<string>_http._tcp</string>
	</array>

	<!-- Development-only network exceptions (remove for production and use HTTPS) -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<true/>
		<key>NSAllowsLocalNetworking</key>
		<true/>
		<key>NSExceptionDomains</key>
		<dict>
			<key>0.0.0.0</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<true/>
				<key>NSIncludesSubdomains</key>
				<true/>
			</dict>
			<key>localhost</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<true/>
				<key>NSIncludesSubdomains</key>
				<true/>
			</dict>
			<!-- Lokales Netzwerk (192.168.x.x) -->
			<key>192.168.178.0</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<true/>
				<key>NSIncludesSubdomains</key>
				<true/>
			</dict>
		</dict>
	</dict>
</dict>
</plist>
